<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="csxt.lsy.dao.BuyerPlanDetailDao">

    <resultMap type="csxt.entity.BuyerPlanDetail" id="BuyerPlanDetailMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="buyerPlanId" column="buyer_plan_id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="VARCHAR"/>
        <result property="productName" column="product_name" jdbcType="VARCHAR"/>
        <result property="describe" column="DESCRIBE" jdbcType="VARCHAR"/>
        <result property="amount" column="amount" jdbcType="INTEGER"/>
        <result property="unit" column="unit" jdbcType="VARCHAR"/>
        <result property="subtotal" column="subtotal" jdbcType="INTEGER"/>
        <result property="gather" column="gather" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BuyerPlanDetailMap">
        select
          id, buyer_plan_id, product_id, product_name, DESCRIBE, amount, unit, subtotal, gather
        from erp.buyer_plan_detail
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BuyerPlanDetailMap">
        select
          id, buyer_plan_id, product_id, product_name, DESCRIBE, amount, unit, subtotal, gather
        from erp.buyer_plan_detail
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BuyerPlanDetailMap">
        select
          id, buyer_plan_id, product_id, product_name, DESCRIBE, amount, unit, subtotal, gather
        from erp.buyer_plan_detail
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="buyerPlanId != null">
                and buyer_plan_id = #{buyerPlanId}
            </if>
            <if test="productId != null and productId != ''">
                and product_id = #{productId}
            </if>
            <if test="productName != null and productName != ''">
                and product_name = #{productName}
            </if>
            <if test="describe != null and describe != ''">
                and DESCRIBE = #{describe}
            </if>
            <if test="amount != null">
                and amount = #{amount}
            </if>
            <if test="unit != null and unit != ''">
                and unit = #{unit}
            </if>
            <if test="subtotal != null">
                and subtotal = #{subtotal}
            </if>
            <if test="gather != null and gather != ''">
                and gather = #{gather}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into erp.buyer_plan_detail(buyer_plan_id, product_id, product_name, DESCRIBE, amount, unit, subtotal, gather)
        values (#{buyerPlanId}, #{productId}, #{productName}, #{describe}, #{amount}, #{unit}, #{subtotal}, #{gather})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update erp.buyer_plan_detail
        <set>
            <if test="buyerPlanId != null">
                buyer_plan_id = #{buyerPlanId},
            </if>
            <if test="productId != null and productId != ''">
                product_id = #{productId},
            </if>
            <if test="productName != null and productName != ''">
                product_name = #{productName},
            </if>
            <if test="describe != null and describe != ''">
                DESCRIBE = #{describe},
            </if>
            <if test="amount != null">
                amount = #{amount},
            </if>
            <if test="unit != null and unit != ''">
                unit = #{unit},
            </if>
            <if test="subtotal != null">
                subtotal = #{subtotal},
            </if>
            <if test="gather != null and gather != ''">
                gather = #{gather},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from erp.buyer_plan_detail where id = #{id}
    </delete>

</mapper>